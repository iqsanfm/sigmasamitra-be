              "    pm.expect(responseJson.data.id).to.be.a('string');",
              "    const requestBody = JSON.parse(pm.request.body.raw);",
              "    pm.expect(responseJson.data.nama).to.eql(requestBody.nama);",
              "});",
              "// Simpan ID yang baru dibuat ke collection variable",
              "if (responseJson.data && responseJson.data.id) {",
              "    pm.collectionVariables.set(\"createdJenisPekerjaanTahunanId\", responseJson.data.id);",
              "    console.log(\"createdJenisPekerjaanTahunanId saved: \" + responseJson.data.id);",
